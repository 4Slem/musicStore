.clear
	clear both
.player
	box-shadow 0 0 1px #666
	margin 20px 0
	border-radius 3px
	position relative
	color #666
	font-weight bold
	&:hover
		box-shadow 0 0 3px #666
	.audio
		height 50px
		line-height 50px
		float left
		audio
			margin 9px 0
	.title
		margin 0 10px
		float left
		line-height 50px
	.info
		line-height 50px
		position absolute
		height 50px
		right 0
		margin-right 10px;
		span
			margin 5px;
			cursor pointer
			
.image-autor
	width 100%
	height auto
	box-shadow 0 0 1px

.block 
	box-shadow 0 0 1px #666
	padding 10px
	border-radius 3px
	margin-bottom 20px
	line-height 70px
	text-align center
	a
		display block
	&:hover
		box-shadow 0 0 3px #666
		
			